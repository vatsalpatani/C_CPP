#include<stdio.h>
#include<conio.h>
void main()
{
	int n,sum=0,a=0;
	float avg;
	clrscr();
	printf("enter n (-999 to terminate...)\n");
	do
	{
		scanf("%d",&n);
		if(n!=-999)
		{
			if(n>0)
			{
				sum+=n;
				a++;
			}
		}
	}
	while(n!=-999);
	avg=(float)sum/a;
	printf("\nsum = %d \t avg = %.2f",sum,avg);
	getch();
}